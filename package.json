{
    "name": "react-ssr",
    "version": "1.0.0",
    "description": "",
    "main": "webpack.config.js",
    "scripts": {
        "dev": "webpack --watch --progress & nodemon index.js",
        "linter": "eslint src",
        "precommit": "eslint src --quiet",
        "clean": "rm -rf dist && mkdir dist",
        "build-server": "./node_modules/.bin/webpack --config-name='server-webpack-config'",
        "build-client": "./node_modules/.bin/webpack --config-name='client-webpack-config'",
        "build-bundles": "yarn build-client && yarn build-server",
        "start": "yarn clean && yarn build-bundles && node ./dist/server-bundle.js"
    },
    "dependencies": {
        "babel-core": "7.0.0-bridge.0",
        "node-emoji": "^1.10.0",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-router-dom": "^4.4.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/preset-env": "^7.3.4",
        "@babel/preset-react": "7.0.0",
        "@babel/register": "^7.0.0",
        "babel-loader": "^7.1.2",
        "bundlesize": "^0.16.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "eslint": "^4.12.0",
        "eslint-config-fortech-react": "^1.0.2",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.5.1",
        "express": "4.16.4",
        "friendly-errors-webpack-plugin": "^1.6.1",
        "husky": "^0.14.3",
        "jest": "^21.2.1",
        "nodemon": "^1.17.2",
        "webpack": "4.19.0",
        "webpack-bundle-analyzer": "^2.13.1",
        "webpack-cli": "^2.1.4",
        "webpack-dev-server": "^3.0.0",
        "webpack-merge": "^4.1.2",
        "webpack-node-externals": "^1.7.2"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "Firefox ESR"
    ],
    "bundlesize": [
        {
            "path": "./dist/js/app.bundle.js",
            "maxSize": "170 kB"
        },
        {
            "path": "./dist/js/lib.bundle.js",
            "maxSize": "110 kB"
        }
    ],
    "jest": {
        "transform": {
            "^.+\\.jsx$": "babel-jest",
            "^.+\\.js$": "babel-jest"
        },
        "setupTestFrameworkScriptFile": "<rootDir>/test-config/test-setup.js"
    },
    "author": "",
    "license": "ISC"
}
